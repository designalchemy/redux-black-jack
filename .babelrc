{
	"plugins": [
		"syntax-dynamic-import",
		"transform-es2015-modules-commonjs",
		"transform-decorators-legacy",
		"transform-class-properties",

		[
			"module-resolver",
			{
				"alias": {
					"components": "./src/components",
					"stores": "./src/stores",
					"styles": "./src/styles",
					"utils": "./src/utils",
					"assets": "./src/assets"
				},
				"root": ["./src"]
			}
		]
	],
	"presets": ["react-app", "react", "es2015"]
}
